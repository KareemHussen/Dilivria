{
	"info": {
		"_postman_id": "popular-place-suggestions",
		"name": "Popular Place Suggestions",
		"description": "API endpoints for Popular Place Suggestions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Create Suggestion",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "title",
							"value": "Test Place",
							"type": "text"
						},
						{
							"key": "description",
							"value": "A nice place to visit",
							"type": "text"
						},
						{
							"key": "address",
							"value": "123 Main Street",
							"type": "text"
						},
						{
							"key": "lng",
							"value": "31.2357",
							"type": "text"
						},
						{
							"key": "lat",
							"value": "30.0444",
							"type": "text"
						},
						{
							"key": "type",
							"value": "restaurant",
							"description": "Options: restaurant, pharmacy, market, gas_station, metro_station, hospital, bank, school, mall, cafe, hotel, park, cinema, other",
							"type": "text"
						},
						{
							"key": "images[]",
							"type": "file",
							"src": [],
							"disabled": true
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/popular-place-suggestions/create",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"popular-place-suggestions",
						"create"
					]
				},
				"description": "Create a new popular place suggestion. Requires authentication."
			},
			"response": []
		},
		{
			"name": "Get My Suggestions",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/popular-place-suggestions/my-suggestions?per_page=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"popular-place-suggestions",
						"my-suggestions"
					],
					"query": [
						{
							"key": "per_page",
							"value": "10",
							"description": "Number of items per page (default: 10)"
						}
					]
				},
				"description": "Get all suggestions submitted by the authenticated customer (paginated)."
			},
			"response": []
		},
		{
			"name": "Get Suggestion Details",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/popular-place-suggestions/get?suggestion_id=1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"popular-place-suggestions",
						"get"
					],
					"query": [
						{
							"key": "suggestion_id",
							"value": "1",
							"description": "ID of the suggestion to retrieve"
						}
					]
				},
				"description": "Get details of a specific suggestion. Only the owner can view their suggestion."
			},
			"response": []
		}
	]
}
